{
    "compilerOptions": {
      "lib": ["es2017","DOM.Iterable"],
      "removeComments": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "es2017",
      "outDir": "lib",
      "allowSyntheticDefaultImports": true
    },
    "include": ["./**/*.ts", "src/index.ts"],
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
    ]
  }